<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:columnCount="6"
    android:rowCount="8">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/display"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_columnWeight="1"
        android:layout_gravity="right" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bksp"
        android:id="@+id/backspaceButton"
        android:layout_column="0"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="removeFromDisplay" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/clearButton"
        android:layout_column="1"
        android:layout_row="1"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:nestedScrollingEnabled="false"
        android:onClick="clearPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="("
        android:id="@+id/leftBracket"
        android:layout_row="1"
        android:layout_column="2"
        android:onClick="buttonPressed"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=")"
        android:id="@+id/rightBracket"
        android:layout_column="3"
        android:layout_row="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cos"
        android:id="@+id/cosButton"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="tan"
        android:id="@+id/tanButton"
        android:layout_row="2"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ln"
        android:id="@+id/lnButton"
        android:layout_row="2"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="âˆš"
        android:id="@+id/sqrtButton"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^2"
        android:id="@+id/squareButton"
        android:layout_row="3"
        android:layout_column="1"
        android:contextClickable="false"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="^"
        android:id="@+id/powButton"
        android:layout_row="3"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log"
        android:id="@+id/logButton"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:id="@+id/button7"
        android:layout_column="0"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8"
        android:id="@+id/button8"
        android:layout_column="1"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:id="@+id/button9"
        android:layout_column="2"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:id="@+id/divideButton"
        android:layout_column="3"
        android:layout_row="4"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/button4"
        android:layout_row="5"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/button5"
        android:layout_row="5"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/button6"
        android:layout_row="5"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="*"
        android:id="@+id/multipleButton"
        android:layout_row="5"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/button1"
        android:layout_row="6"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/button2"
        android:layout_row="6"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/button3"
        android:layout_row="6"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:id="@+id/minusButton"
        android:layout_row="6"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/button0"
        android:layout_row="7"
        android:layout_column="0"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="."
        android:id="@+id/dotButton"
        android:layout_row="7"
        android:layout_column="1"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="="
        android:id="@+id/equalButton"
        android:layout_row="7"
        android:layout_column="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="equalsPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/plusButton"
        android:layout_row="7"
        android:layout_column="3"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sin"
        android:id="@+id/sinButton"
        android:layout_column="0"
        android:layout_row="2"
        android:layout_rowWeight="1"
        android:layout_gravity="fill"
        android:onClick="buttonPressed" />

</GridLayout>
